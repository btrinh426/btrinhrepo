SingleFriend component:
import React from "react";
const SingleFriend = props => {
    const onTest = ()=> {
        props.onTest(props.friend.id);
    }
    return (
        <React.Fragment>
            <h1>{props.friend.name}</h1>
            <button onClick={onTest}>Ckic me</button>
        </React.Fragment>
    )
}
export default SingleFriend;